<?xml version="1.0" encoding="UTF-8"?>
 
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
 
<tiles-definitions>
 
        <!-- base tiles layout add -->
 
        <definition name="base" template="/layout/base.jsp">
                <put-attribute name="header" value="/layout/header.jsp" />
                <put-attribute name="body" value="" />
                <put-attribute name="footer" value="/layout/footer.jsp" />
        </definition>
 
        <definition name="index" extends="base">
                <put-attribute name="body" value="/index.jsp" />
        </definition>
        
        <definition name="*/*" extends="base">
                <put-attribute name="body" value="/{1}/{2}.jsp" />
        </definition>
 
        <definition name="*/*/*" extends="base">
                <put-attribute name="body" value="/{1}/{2}/{3}.jsp" />
        </definition>
 
</tiles-definitions>